<!doctype html>
<html lang="en">

<%- include('includes/head.ejs') %>

<body>
  <header>
    <!-- place navbar here -->
    <%- include('includes/nav.ejs') %>
  </header>
  <main>
    <div class="container-fluid">
        <div class="newsfeed">
            <div class="whiteBox post">
                <div class="openBtn">
                    <button class="openButton" onclick="openForm()"><strong>Write Your Post</strong></button>
                  </div>
                  <div class="loginPopup">
                    <div class="formPopup" id="popupForm">
                      <form action="/forum/publish_post" class="formContainer" method="POST">
                        <h2>Write Your Post</h2>
                        <input type="text" id="post-title" placeholder="Title" name="title" required>
                        <textarea id="post-content" placeholder="Write Here" class="pwc" name="content" required></textarea>
                        <button type="submit" class="btn">Publish</button>
                        <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
                      </form>
                    </div>
                  </div>
            </div>
            <%
            if(posts.length != 0){posts.forEach(function(data){
            %>
            <div class="whiteBox post">
                <div class="post-title"><h3><b>[<%=data.username%>] <%=data.title%></b></h3></div>
                <div class="post-content"><%=data.content%></div>
            </div>
            <%
            })};
            %>
        </div>
    </div>
  </main>
  <footer>
    <!-- place footer here -->
  </footer>
  <!-- Bootstrap JavaScript Libraries -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
    integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
    integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
  </script>
  <script>
    function openForm() {
      document.getElementById("popupForm").style.display = "block";
    }
    function closeForm() {
      document.getElementById("popupForm").style.display = "none";
    }
  </script>
</body>

</html>